<!-- Search & Filter Bar -->
<div class="mb-10 fade-in" style="animation-delay: 0.1s;">
    <div class="flex flex-col md:flex-row gap-4 items-center">
        <!-- Premium Search -->
        <div class="premium-search flex-1">
            <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
            </svg>
            <input 
                type="text" 
                placeholder="@Placeholder"
                class="premium-input-search"
                value="@SearchQuery"
                @oninput="OnSearchInput"
            />
        </div>
        
        <!-- Filter Pills -->
        <div class="flex flex-wrap gap-2">
            <button class="filter-pill @(SelectedCategory == "All" ? "active" : "")" @onclick='() => OnCategoryChanged.InvokeAsync("All")'>All</button>
            <button class="filter-pill @(SelectedCategory == "Documentation" ? "active" : "")" @onclick='() => OnCategoryChanged.InvokeAsync("Documentation")'>Docs</button>
            <button class="filter-pill @(SelectedCategory == "Tutorials" ? "active" : "")" @onclick='() => OnCategoryChanged.InvokeAsync("Tutorials")'>Tutorials</button>
            <button class="filter-pill @(SelectedCategory == "Articles" ? "active" : "")" @onclick='() => OnCategoryChanged.InvokeAsync("Articles")'>Articles</button>
        </div>
    </div>
</div>

@using System.Threading

@code {
    [Parameter] public string SearchQuery { get; set; } = "";
    [Parameter] public string SelectedCategory { get; set; } = "All";
    [Parameter] public string Placeholder { get; set; } = "Search resources...";
    [Parameter] public EventCallback<string> SearchQueryChanged { get; set; }
    [Parameter] public EventCallback<string> OnCategoryChanged { get; set; }

    private CancellationTokenSource? _debounceCts;

    private void OnSearchInput(ChangeEventArgs e)
    {
        SearchQuery = e.Value?.ToString() ?? "";
        
        _debounceCts?.Cancel();
        _debounceCts = new CancellationTokenSource();
        var token = _debounceCts.Token;

        Task.Delay(300, token).ContinueWith(async _ => 
        {
            if (!token.IsCancellationRequested)
            {
                await InvokeAsync(async () => 
                {
                    await SearchQueryChanged.InvokeAsync(SearchQuery);
                });
            }
        });
    }

    public void Dispose()
    {
        _debounceCts?.Cancel();
        _debounceCts?.Dispose();
    }
}
