@if (!Articles.Any())
{
    <!-- Empty State -->
    <div class="text-center py-20 fade-in">
        <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-slate-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
            </svg>
        </div>
        <h3 class="text-[18px] font-semibold text-slate-900 mb-2 font-['Inter']">
            @if (!string.IsNullOrWhiteSpace(SearchQuery) || SelectedCategory != "All")
            {
                <text>No matching resources found</text>
            }
            else
            {
                <text>No resources yet</text>
            }
        </h3>
        <p class="text-slate-500 text-sm">
            @if (!string.IsNullOrWhiteSpace(SearchQuery) || SelectedCategory != "All")
            {
                <text>Try adjusting your search or filters.</text>
            }
            else
            {
                <text>@EmptyStateMessage</text>
            }
        </p>
    </div>
}
else
{
    <!-- Resource Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var article in Articles)
        {
            <div class="group bg-white rounded-xl p-6 shadow-[0px_2px_4px_rgba(0,0,0,0.06)] hover:shadow-[0px_4px_8px_rgba(0,0,0,0.1)] border border-slate-100 transition-all duration-200 cursor-pointer flex flex-col h-full" 
                 @onclick="() => OnViewArticle.InvokeAsync(article.Id)">
                
                <!-- Header: Icon & Category -->
                <div class="flex items-start justify-between mb-4">
                    <div class="w-10 h-10 rounded-lg bg-slate-50 flex items-center justify-center text-slate-600 group-hover:bg-slate-900 group-hover:text-white transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                        </svg>
                    </div>
                    <span class="px-2.5 py-1 rounded-full text-xs font-medium bg-slate-50 text-slate-600 border border-slate-100">
                        @(string.IsNullOrWhiteSpace(article.Category) ? "Uncategorized" : article.Category)
                    </span>
                </div>

                <!-- Content -->
                <div class="flex-1">
                    <h3 class="text-[18px] font-semibold text-slate-900 mb-2 line-clamp-2 font-['Inter'] group-hover:text-blue-600 transition-colors">
                        @article.Title
                    </h3>
                    <p class="text-slate-500 text-sm leading-relaxed line-clamp-3 mb-4">
                        @(string.IsNullOrWhiteSpace(article.Summary) ? GetContentPreview(article.Content) : article.Summary)
                    </p>
                </div>

                <!-- Footer: Tags & Stats -->
                <div class="mt-auto pt-4 border-t border-slate-50 flex items-center justify-between">
                    <div class="flex items-center gap-2 text-xs text-slate-400">
                        <span>@FormatDate(article.CreatedAt)</span>
                        <span>â€¢</span>
                        <span>@article.VoteCount votes</span>
                    </div>
                    
                    <button class="text-slate-400 hover:text-red-500 transition-colors @(article.IsVoted ? "text-red-500" : "")"
                            @onclick="() => ToggleVote(article)" @onclick:stopPropagation="true" @onclick:preventDefault="true">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="@(article.IsVoted ? "currentColor" : "none")" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 14c1.49-1.28 3.6-2.33 3.6-4.7 0-2.5-1.9-4.2-4.4-4.2-1.5 0-2.9.9-3.5 2.1-.6-1.2-2-2.1-3.5-2.1-2.5 0-4.4 1.7-4.4 4.2 0 2.37 2.11 3.42 3.6 4.7l.6.5L12 21l1.4-2.6.6-.5z"/>
                        </svg>
                    </button>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter] public IEnumerable<Article> Articles { get; set; } = Enumerable.Empty<Article>();
    [Parameter] public string SearchQuery { get; set; } = "";
    [Parameter] public string SelectedCategory { get; set; } = "All";
    [Parameter] public string EmptyStateMessage { get; set; } = "Be the first to share knowledge with the community!";
    [Parameter] public EventCallback<int> OnViewArticle { get; set; }
    
    [Inject] public HttpClient Http { get; set; } = default!;

    private async Task ToggleVote(Article article)
    {
        // Optimistic update
        article.IsVoted = !article.IsVoted;
        article.VoteCount += article.IsVoted ? 1 : -1;
        
        try
        {
            var response = await Http.PostAsync($"api/articles/{article.Id}/vote", null);
            if (!response.IsSuccessStatusCode)
            {
                // Revert if failed
                article.IsVoted = !article.IsVoted;
                article.VoteCount += article.IsVoted ? 1 : -1;
            }
        }
        catch
        {
            // Revert if failed
            article.IsVoted = !article.IsVoted;
            article.VoteCount += article.IsVoted ? 1 : -1;
        }
    }

    private string GetContentPreview(string content)
    {
        const int maxLength = 120;
        if (string.IsNullOrEmpty(content))
            return "";
            
        // Simple Regex to strip Markdown
        var plainText = System.Text.RegularExpressions.Regex.Replace(content, @"```[\s\S]*?```", "");
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"`[^`]*`", "");
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"^#+\s+", "", System.Text.RegularExpressions.RegexOptions.Multiline);
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"(\*\*|__)(.*?)\1", "$2");
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"(\*|_)(.*?)\1", "$2");
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"\[([^\]]+)\]\([^\)]+\)", "$1");
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"!\[([^\]]*)\]\([^\)]+\)", "$1");
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"^>\s+", "", System.Text.RegularExpressions.RegexOptions.Multiline);
        plainText = System.Text.RegularExpressions.Regex.Replace(plainText, @"\s+", " ").Trim();

        if (plainText.Length <= maxLength)
            return plainText;
            
        return plainText.Substring(0, maxLength) + "...";
    }

    private string FormatDate(DateTime date)
    {
        var timeSpan = DateTime.UtcNow - date;
        
        if (timeSpan.TotalDays < 1)
            return "Today";
        else if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays}d ago";
        else
            return date.ToString("MMM dd");
    }
}
