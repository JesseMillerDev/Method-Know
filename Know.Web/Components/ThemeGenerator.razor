@page "/theme"
@using Know.Web.Services
@inject ThemeService ThemeService
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Theme Generator</PageTitle>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6">AI Theme Generator</h1>
        
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8">
            <p class="text-gray-600 dark:text-gray-300 mb-4">
                Describe how you want your app to look (e.g., "Cyberpunk neon style", "Cozy coffee shop", "Naruto theme").
                Our AI will generate a custom theme for you.
            </p>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Error:</strong>
                    <span class="block sm:inline">@errorMessage</span>
                </div>
            }

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
                <textarea @bind="description" 
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                          rows="4"
                          placeholder="Enter your theme description..."></textarea>
            </div>

            <div class="flex gap-4">
                <button @onclick="GenerateTheme" disabled="@isGenerating"
                        class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed flex items-center">
                    @if (isGenerating)
                    {
                        <span class="mr-2">Generating...</span>
                        <div class="animate-spin h-4 w-4 border-2 border-white border-t-transparent rounded-full"></div>
                    }
                    else
                    {
                        <span>Generate Theme</span>
                    }
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(generatedCss))
        {
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold mb-4">Preview</h2>
                
                <div class="p-4 border border-gray-200 rounded-md mb-4 bg-gray-50 dark:bg-gray-900">
                    <p class="text-sm text-gray-500 mb-2">Generated CSS Variables:</p>
                    <pre class="text-xs overflow-x-auto p-2 bg-gray-100 dark:bg-black rounded">@generatedCss</pre>
                </div>

                <div class="flex gap-4">
                    <button @onclick="ApplyPreview" 
                            class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700">
                        Preview (Apply Locally)
                    </button>
                    <button @onclick="SaveTheme" 
                            class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">
                        Save Theme
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string description = "";
    private string generatedCss = "";
    private string? errorMessage;
    private bool isGenerating = false;

    private async Task GenerateTheme()
    {
        if (string.IsNullOrWhiteSpace(description)) return;

        isGenerating = true;
        errorMessage = null;
        generatedCss = "";

        try
        {
            generatedCss = await ThemeService.GenerateThemeAsync(description);
            if (!string.IsNullOrEmpty(generatedCss))
            {
                await ApplyPreview();
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isGenerating = false;
        }
    }

    private async Task ApplyPreview()
    {
        if (!string.IsNullOrEmpty(generatedCss))
        {
            await ThemeService.ApplyCustomThemeAsync(generatedCss);
        }
    }

    private async Task SaveTheme()
    {
        if (string.IsNullOrEmpty(generatedCss)) return;

        try 
        {
            await ThemeService.SaveThemeAsync(generatedCss);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
}
