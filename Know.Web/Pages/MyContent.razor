@page "/my-content"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Net.Http.Headers

@attribute [Authorize]
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject IJSRuntime JSRuntime
@inject Know.Web.Services.AppState AppState
@implements IDisposable

<PageTitle>My Content</PageTitle>

<!-- Page Header -->
<div class="mb-12 fade-in">
    <h1 class="text-[32px] md:text-[40px] font-bold tracking-tight text-slate-900 dark:text-white mb-2 font-['Inter']">My Content</h1>
    <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 font-['Inter']">View and manage all the articles you've uploaded to your knowledge base.</p>
</div>

<!-- Search & Filter Bar -->
<SearchFilterBar 
    SearchQuery="@searchQuery" 
    SelectedCategory="@selectedCategory"
    Placeholder="Search your content..."
    SearchQueryChanged="@HandleSearch"
    OnCategoryChanged="FilterByCategory"
/>

<!-- Loading State & Grid -->
@if (isLoading)
{
    <LoadingSpinner Message="Loading your content..." />
}
else
{
    <ResourceGrid 
        Articles="@articles"
        SearchQuery="@searchQuery"
        SelectedCategory="@selectedCategory"
        EmptyStateMessage="Start by uploading your first article to your knowledge base."
        OnViewArticle="ViewArticle"
    />
}

@code {
    private List<Article> articles = new();
    private bool isLoading = true;
    private string searchQuery = "";
    private string selectedCategory = "All";
    private string? userId;
    
    protected override async Task OnInitializedAsync()
    {
        AppState.OnArticleCreated += HandleArticleCreated;
        AppState.OnArticleUpdated += HandleArticleUpdated;
        AppState.OnArticleDeleted += HandleArticleDeleted;
        try
        {
            // Get user ID from authentication state
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            if (user.Identity?.IsAuthenticated == true)
            {
                // Extract userId from JWT claims
                userId = user.FindFirst("sub")?.Value 
                    ?? user.FindFirst("nameid")?.Value 
                    ?? user.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value;
                
                if (!string.IsNullOrEmpty(userId))
                {
                    // Get auth token and set authorization header
                    var token = await LocalStorage.GetItemAsync<string>("authToken");
                    if (!string.IsNullOrEmpty(token))
                    {
                        Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);
                    }
                    
                    // Fetch user's articles
                    await RefreshArticles();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading articles: {ex.Message}");
            articles = new();
        }
        finally
        {
            isLoading = false;
        }
    }

    public void Dispose()
    {
        AppState.OnArticleCreated -= HandleArticleCreated;
        AppState.OnArticleUpdated -= HandleArticleUpdated;
        AppState.OnArticleDeleted -= HandleArticleDeleted;
    }



    private async Task HandleSearch(string query)
    {
        searchQuery = query;
        await RefreshArticles();
    }

    private async Task FilterByCategory(string category)
    {
        selectedCategory = category;
        await RefreshArticles();
    }

    private string GetContentPreview(string content)
    {
        const int maxLength = 150;
        if (string.IsNullOrEmpty(content))
            return "No content available";
            
        if (content.Length <= maxLength)
            return content;
            
        return content.Substring(0, maxLength) + "...";
    }

    private string FormatDate(DateTime date)
    {
        var timeSpan = DateTime.UtcNow - date;
        
        if (timeSpan.TotalDays < 1)
            return "Today";
        else if (timeSpan.TotalDays < 2)
            return "Yesterday";
        else if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} days ago";
        else if (timeSpan.TotalDays < 30)
            return $"{(int)(timeSpan.TotalDays / 7)} weeks ago";
        else
            return date.ToString("MMM dd, yyyy");
    }

    private void ViewArticle(int articleId)
    {
        var article = articles.FirstOrDefault(a => a.Id == articleId);
        if (article != null)
        {
            AppState.RequestViewResource(article);
        }
    }

    private async void HandleArticleCreated(Article article)
    {
        await RefreshArticles();
    }

    private async void HandleArticleUpdated(Article article)
    {
        await RefreshArticles();
    }

    private async void HandleArticleDeleted(int articleId)
    {
        await RefreshArticles();
    }

    private async Task RefreshArticles()
    {
        if (string.IsNullOrEmpty(userId))
            return;

        try
        {
            isLoading = true;
            StateHasChanged();

            var queryParams = new List<string>();
            if (!string.IsNullOrEmpty(selectedCategory) && selectedCategory != "All")
                queryParams.Add($"category={Uri.EscapeDataString(selectedCategory)}");
            
            if (!string.IsNullOrWhiteSpace(searchQuery))
                queryParams.Add($"search={Uri.EscapeDataString(searchQuery)}");

            var queryString = queryParams.Any() ? "?" + string.Join("&", queryParams) : "";
            var apiUrl = $"/api/users/{userId}/articles{queryString}";
            
            articles = await Http.GetFromJsonAsync<List<Article>>(apiUrl) ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error refreshing articles: {ex.Message}");
            articles = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }


}
