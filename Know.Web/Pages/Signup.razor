@page "/signup"
@layout Know.Web.Layout.AuthLayout
@using Know.Web.Auth
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="flex min-h-full flex-col justify-center">
  <div class="sm:mx-auto sm:w-full">
    <h2 class="text-center text-3xl font-bold leading-tight tracking-tight text-black mb-8">Create your account</h2>
  </div>

  <div class="sm:mx-auto sm:w-full">
    <EditForm Model="@signupModel" OnValidSubmit="HandleSignup" class="space-y-6">
      <DataAnnotationsValidator />
      
      @if (!string.IsNullOrEmpty(errorMessage))
      {
        <div class="validation-message error bg-red-50 border-2 border-red-200 rounded-lg p-3 text-red-700 text-sm">
          @errorMessage
        </div>
      }

      @if (!string.IsNullOrEmpty(successMessage))
      {
        <div class="bg-green-50 border-2 border-green-200 rounded-lg p-3 text-green-700 text-sm font-medium fade-in">
          @successMessage
        </div>
      }

      <div class="space-y-5">
        <!-- Email Field -->
        <AuthInput 
            Id="email"
            Label="Email address"
            @bind-Value="signupModel.Email"
            Placeholder="you@example.com"
            Disabled="@isLoading"
        />

        <!-- Password Field -->
        <AuthInput 
            Id="password"
            Label="Password"
            Type="password"
            @bind-Value="signupModel.Password"
            Placeholder="Create a strong password"
            Disabled="@isLoading"
        />
      </div>

      <!-- Sign Up Button -->
      <AuthButton 
          Text="Sign up"
          LoadingText="Creating account..."
          IsLoading="@isLoading"
      />
    </EditForm>

    <!-- Login Link -->
    <p class="mt-8 text-center text-sm text-gray-600">
      Already a member?
      <a href="login" class="font-semibold text-black hover:text-gray-700 underline underline-offset-2 decoration-2 transition-colors ml-1">Sign in</a>
    </p>
  </div>
</div>

@code {
    private SignupModel signupModel = new();
    private bool isLoading = false;
    private string errorMessage = "";
    private string successMessage = "";

    private async Task HandleSignup()
    {
        isLoading = true;
        errorMessage = "";
        successMessage = "";
        StateHasChanged();

        try
        {
            var response = await Http.PostAsJsonAsync("api/auth/signup", signupModel);
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Account created successfully! Redirecting to login...";
                StateHasChanged();
                await Task.Delay(1500); // Show success message briefly
                Navigation.NavigateTo("/login");
            }
            else
            {
                errorMessage = "Unable to create account. This email may already be registered.";
            }
        }
        catch (Exception)
        {
            errorMessage = "Unable to connect to the server. Please try again later.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public class SignupModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";

        [Required]
        public string Password { get; set; } = "";
    }
}
